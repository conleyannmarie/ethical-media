<div>
  {{#each this}}
    <div class="row">
        <div class="col-md-12">
            {{!-- Main information of the page --}}
            <h2>{{username}}</h2>
            <h2>{{overall}}</h2>

            {{!-- This is what would go in a card --}}
            {{#categories}}
            <p>{{name}}</p>
            {{#each ratings}}
            {{!-- rating for category --}}
            <p>{{rating}}</p>
            {{!-- comment about the rating --}}
            <p>{{about_rating}}</p>
            {{/each}}
            {{/categories}}


        </div>
    </div>
    {{/each}}
</div>

{{#if loggedIn}}
<form class="rating-form">
    <div>
        <label for="category-name">Category</label>
        <input type="text" id="category-name" name="category-name" />
    </div>

    <div>
        <label for="rating">Rating</label>
        <input type="number" id="rating" name="rating" />
    </div>

    <div>
        <label for="rating-body">Comment</label>
        <textarea name="rating-body"></textarea>
    </div>

    <div>
        <button type="submit">add rating</button>
    </div>
</form>
{{/if}}


{{#if loggedIn}}
<script src="/javascript/rate.js"></script>
{{/if}}
